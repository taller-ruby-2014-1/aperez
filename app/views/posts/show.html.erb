<%= link_to 'Back', posts_path %> | <%= link_to 'Edit', edit_post_path(@post) %>
<p>
	<strong>Title:</strong>
	<%= @post.title %>

</p>

<p>
	<strong>Text:</strong>
	<%= @post.text %>
</p>


<h2>Agrega un comentario:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
<%= f.label :commentr %><br />
<%= f.text_field :commentr %>
</p>
<p>
<%= f.label :body %><br />
<%= f.text_area :body %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>



<h2>Comentarios</h2>
<% @post.comments.each do |comment| %>
<p>
<strong>Commenter:</strong>
<%= comment.commentr %>
</p>
<p>
<strong>Comment:</strong>
<%= comment.body %>
</p>
<% end %>
